{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="container">
        <div class="row" style="display:flex;justify-content:center;">
            <h1>Récupération du mot de passe</h1>
        </div>
    </div>
    <div class="container">
        <div class="row" style="display:flex;justify-content:center;">
                <label for="username">Veuillez entrer votre nom d'utilisateur</label>
                <input class="form-control" type="text" id="username" name="username" required="required" /><br>
            <div class="row mt-3">
                <input class="btn btn-success" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
            
        </div>
    </div>
    
</form>
