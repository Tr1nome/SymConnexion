{% extends 'base.html.twig' %}

{% block title %}Edit Formation{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css">
{% endblock %}

{% block body %}
    <h1>Edit Formation</h1>
    {% if formation.image %}
        <img src="{{ asset(formation.image.imgPath) }}" />
        {{ include('formation/_delete_img_form.html.twig') }}
    {% endif %}

    {{ include('formation/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('formation_index') }}">back to list</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="{{ asset("js/bootstrap-datepicker.fr.min.js") }}"></script>
    <script>
        $(document).ready(function() {
            $.fn.datepicker.defaults.language = 'fr';
            $('.js-datepicker').datepicker();
        });
    </script>
{% endblock %}
