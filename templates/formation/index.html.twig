{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Nos Formations</h1>

    <table class="table table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Utilisateurs inscrits</th>
                <th>Détails</th>
                <th>Edition/Suppression</th>
                <th>Exporter les données</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}

            <tr>
                <td>{% if formation.image %}<img src="{{asset(formation.image.imgPath)}}"class="img-thumbnail"style="height:100px;width:150px;" title="{{ asset(formation.image.alternative) }}"/>{% else %}Aucune image selectionnée{% endif %}</td>
                <td>{{ formation.name }}</td>
                <td>{{ formation.description | raw }}</td>
                <td>{{ formation.hour | date("d F Y") }} à {{ formation.time | date("G:i") }}</td>
                <td>{% for user in formation.user %}
                        <div> {% if user.enabled %} {{ user }} {% endif %} </div>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}"><i class="fas fa-eye">Détails</i></a>

                </td>
                        <td style="display:flex; justify-content: space-evenly;">
                        <a href="{{ path('formation_edit', {'id': formation.id}) }}"><button class="btn-primary" style="width:30px;height:30px;"><i class="fas fa-edit"></i></button></a>
                        {{ include('formation/_delete_form.html.twig') }}

                </td>
                <td>
                    <a href="{{ path('formation_export', {'id': formation.id}) }}"><img class="img" style="width:30px;height:30px;" src ="{{asset('/img/csv_icon.png') }} "/></a>
                </td>
                
            </tr>

        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
            <hr style="color:black;">
        {% endfor %}
        </tbody>

    </table>

    <a href="{{ path('formation_new') }}"><i class="fas fa-plus-square" style="color:green;"></i></a>

{% endblock %}
