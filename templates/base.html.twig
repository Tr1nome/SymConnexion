<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        <!--<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <a class="navbar-brand" href="{{ path("accueilClass_index") }}"><img src="{{ asset('img/icon.png') }}" style="border-radius:50%;width:50px;height:50px;"/> Fenrir Studio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("actu_index") }}">Gestion des news</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("formation_index") }}">Gestion des formations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("event_index") }}">Gestion des évènements</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("user_index") }}">Gestion des utilisateurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("image_index") }}">Gestion des uploads</a>
                </li>
                <li>
                    <a class="nav-link" href="{{ path("survey_index") }}">Retours Utilisateurs</a>                
                </li>
                {% if is_granted("ROLE_USER") %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path("fos_user_profile_show") }}">Mon compte</a>
                            <a class="dropdown-item" href="{{ path("fos_user_profile_edit") }}">Options</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path("fos_user_security_logout") }}">Deconnexion</a>
                        </div>
                    </li>
                    <div style="width:150px;">
                    </div>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link float-right" href="{{ path("fos_user_security_login") }}">Connexion</a>
                    </li>
                        <!--<li class="nav-item">
                            <a class="nav-link float-right" href="{{ path("fos_user_registration_register") }}">Inscription</a>
                        </li>-->
                {% endif %}
            </ul>

        </div>
    </nav>
    <div class="container-fluid" style="height:100vh;">
        {% block body %}
        
        {% endblock %}
        
    </div>
    <div style="height:550px;"></div>
    <section class="footer mt-auto">
		<div class="container">
			<div class="row">
				<div class="col-md-4 mb-3 mb-md-0">
					<div class="card-body text-center">
              		
              		<h4 class="" style="color:white;">Copyright Léo Souly</h4>
              		
                </div>
            </div>
        </div>
    </section>
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        {% block javascripts %}
        {% endblock %}
    </body>
</html>
